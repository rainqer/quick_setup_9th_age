<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Typography" />

  <style name="Typography.Component" />

  <style name="Typography.Component.Paragraph">
    <item name="android:textSize">@dimen/text_paragraph</item>
  </style>

  <style name="Typography.Component.Paragraph.Italic">
    <item name="android:textStyle">italic</item>
  </style>

  <style name="Typography.Component.Title">
    <item name="android:textSize">@dimen/text_title_medium</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Typography.Component.Subtitle">
    <item name="android:textSize">@dimen/text_title_small</item>
  </style>

  <style name="Typography.Component.Button">
    <item name="android:textSize">@dimen/text_title_medium</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/teal_700</item>
    <item name="android:background">@drawable/component_button_background</item>
  </style>
</resources>