<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="Theme.QuickSetup" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/teal_200</item>
    <item name="colorPrimaryVariant">@color/teal_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="android:windowBackground">@color/gray</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/orange</item>
    <item name="colorSecondaryVariant">@color/orange2</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    <item name="deploymentViewStyle">@style/Component_DeploymentView_Verbose</item>
    <item name="objectiveViewStyle">@style/Component_SecondaryObjectiveView_Verbose</item>
    <item name="android:button">@style/Typography.Component.Button</item>

  </style>

  <style name="Component_DeploymentView_Verbose">
    <item name="deploymentview_verbose">true</item>
  </style>

  <style name="Component_SecondaryObjectiveView_Verbose">
    <item name="objectiveview_verbose">true</item>
  </style>
</resources>