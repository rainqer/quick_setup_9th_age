<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/textView"
  tools:layout_height="wrap_content"
  tools:layout_width="match_parent"
  tools:orientation="vertical"
  tools:parentTag="android.widget.LinearLayout">

  <TextView
    android:id="@+id/deploymentTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="@style/Typography.Component.Title"
    tools:text="Deployment title" />

  <ImageView
    android:id="@+id/deploymentImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:contentDescription="@string/deployment_preview"
    android:scaleType="fitCenter"
    tools:src="@drawable/deployment_01_frontlineclash" />

  <TextView
    android:id="@+id/deploymentDescription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_vertical_small"
    android:textAppearance="@style/Typography.Component.Paragraph"
    tools:text="@string/deployment_06_description" />

</merge>
