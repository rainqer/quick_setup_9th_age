<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:layout_height="wrap_content"
  tools:layout_width="match_parent"
  tools:orientation="horizontal"
  tools:parentTag="android.widget.RelativeLayout">

  <TextView
    android:id="@+id/entryPointValue"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:textAppearance="@style/Typography.Component.TableEntry.Significant"
    tools:text="@string/points" />

  <TextView
    android:id="@+id/entryTitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@+id/entryPointValue"
    android:layout_alignParentEnd="true"
    android:textAppearance="@style/Typography.Component.TableEntry.Significant"
    tools:text="Goblin Witchdoctor" />

  <TextView
    android:id="@+id/entryDetails"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/entryPointValue"
    android:layout_alignStart="@+id/entryTitle"
    android:layout_alignParentEnd="true"
    android:textAppearance="@style/Typography.Component.TableEntry.Insignificant"
    tools:text="Bla bla bla" />


</merge>
